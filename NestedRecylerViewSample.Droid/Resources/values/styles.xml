<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <!-- Application theme -->
  <style name="AppTheme" parent="AppTheme.Base">
  </style> 
  
  <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>

    <item name="windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
    <item name="windowActionModeOverlay">false</item>
    <item name="android:statusBarColor">@color/colorPrimaryDark</item>

    <item name="android:windowBackground">@color/white</item> 

    <item name="android:textCursorDrawable">@null</item>

    <item name="vpiCirclePageIndicatorStyle">@style/CirclePageIndicator</item>
  </style>

  <style name="AppTheme.Splash" parent="AppTheme.Base">
    <item name="android:statusBarColor">@color/colorPrimaryDark</item>
  </style>

  <style name="CirclePageIndicator">
    <item name="vpi_fillColor">@color/white</item>
    <item name="vpi_pageColor">#80FFFFFF</item>
    <item name="vpi_strokeColor">@android:color/transparent</item>
    <item name="vpi_radius">6dp</item>
    <item name="vpi_centered">true</item>
  </style>

</resources>